{
  "title": "Esc tilde",
  "rules": [
    {
      "description": "Caps+Esc -> tilde",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "name": "caps_lock pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ]
        }
      ]
    },
    {
      "description": "Caps+]}-> end",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "name": "caps_lock pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "end"
            }
          ]
        }
      ]
    }
  ]
}
